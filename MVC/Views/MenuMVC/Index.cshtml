@* @using WebAPI.Models*@
@model List<Menu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Menus</h1>


<table class="table table-bordered table-striped">
    <tr>
        <th>Nome do menu</th>
        <th>Detalhes</th>
    </tr>
    @foreach (Menu menu in Model)
    {
        <tr>
            <td>@menu.Name</td>
            <td>
                <a asp-controller="MenuMVC" asp-action="Details" asp-route-name="@menu.Name" class="btn btn-primary">Ver</a>
            </td>
        </tr>
    }
</table>

